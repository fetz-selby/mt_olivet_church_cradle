<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.beta.rsatech.churchcradle.client.widgets">
	<ui:style>
		.upload-hide {cursor: pointer;opacity: 0;position: absolute;z-index: 2;}
		.img-style{width: 130px !important; height: 130px !important;}

	</ui:style>
	<g:HTMLPanel>
		<div class="row">
			<div class="text-center m-t">
				<div class="avatar b-3x">
					<g:Image styleName="{style.img-style}" ui:field="img"></g:Image>
				</div>
			</div>
		</div>

		<div class="panel-body">
			<div role="form">
				<div class="form-group">
					<g:TextBox styleName="form-control" ui:field="firstNameField"></g:TextBox>
				</div>
				<div class="form-group">
					<g:TextBox styleName="form-control" ui:field="lastNameField"></g:TextBox>
				</div>
				<div class="form-group">
					<g:TextBox styleName="form-control" ui:field="msisdnField"></g:TextBox>
				</div>
				<div class="form-group">
					<g:TextBox styleName="form-control" ui:field="codeField"></g:TextBox>
				</div>
				<!-- <div class="checkbox i-checks">
					<label>
						<input type="checkbox" ui:field="checkbox" />
						<i ui:field="iCheck"></i>
						Enable SMS
					</label>
				</div> -->
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 