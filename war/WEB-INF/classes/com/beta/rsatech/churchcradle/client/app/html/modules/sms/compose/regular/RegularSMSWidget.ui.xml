<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.beta.rsatech.churchcradle.client.widgets">
	<ui:style>
	</ui:style>
	<g:HTMLPanel styleName="panel-body">
		<div class="row" ui:field="groupsDiv">
			<div class="alert alert-danger hide" ui:field="errorDiv">
				<button type="button" class="close" data-dismiss="alert">Ã—</button>
				<i class="fa fa-ban-circle"></i>
				<strong ui:field="titleErrorMessage"></strong>
			</div>
		</div>

		<div class="line line-dashed b-b line-lg pull-in"></div>

		<div class="m-b-sm"></div>

		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					<div class="col-sm-10">
					    <label class="control-label" ui:field="smsFrom">From</label>
						<g:TextBox styleName="form-control" ui:field="fromBox"></g:TextBox>
					</div>
				</div>
			</div>
		</div>
		
		<div class="row">
			<div class="m-b-sm"></div>
		</div>

		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					<div class="col-sm-10">
					    <label class="control-label" ui:field="smsTo">To</label>
						<g:TextBox styleName="form-control" ui:field="toBox"></g:TextBox>
					</div>
				</div>
			</div>
		</div>

		<div class="row m-b-sm"></div>

		<div class="row">
			<div class="col-sm-12">
				<div class="form-group">
					<div class="col-sm-12">
						<div class="pull-right" ui:field="smsCounter">SMS 1</div>
					</div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-12">
				<div class="form-group">
					<div class="col-sm-12">
						<c:SMSTextArea ui:field="smsTextArea"></c:SMSTextArea>
					</div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-12">
				<div class="form-group">
					<div class="col-sm-12">
						<div class="pull-right" ui:field="charCounter">Character(s) 621</div>
					</div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-12">
				<div class="form-group">
					<div class="pull-right m-r-md">
						<a href="javascript:void(0)" class="btn btn-s-md btn-primary"
							ui:field="sendBtn">Send</a>
					</div>
				</div>
			</div>
		</div>

	</g:HTMLPanel>
</ui:UiBinder> 