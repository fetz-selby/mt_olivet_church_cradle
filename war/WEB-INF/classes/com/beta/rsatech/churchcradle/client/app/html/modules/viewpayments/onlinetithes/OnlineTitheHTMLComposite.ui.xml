<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
	<ui:style>
	.main-style{height: 180px; padding: 0;}
	.header-style{height: 95px; padding: 7px;}
	.i-style{padding-right: 5px;}
	.theme-style{height: 80px; overflow-y: auto;}
	</ui:style>
	<section class="col-sm-3 panel panel-default {style.main-style}">
		<header class="bg-success no-border {style.header-style}">
			<div class="clearfix">
				
				<div class="text-center">
					<small class="h4 text-muted" ui:field="desc">Art director</small>
				</div>
			</div>
			
		</header>
		<div class="list-group no-radius alt">
			<a class="list-group-item" href="javascript:void(0)">
				<i class="fa fa-user icon-muted text-success {style.i-style}"></i>
				<small ui:field="smallName" class="text-success">Rev. Dr Chapel</small>
			</a>
			
			<a class="list-group-item" href="javascript:void(0)">
				<i class="fa fa-calendar icon-muted text-success {style.i-style}"></i>
				<small ui:field="smallDate" class="text-success">Sat, 22nd December, 2015</small>
			</a>
		</div>
	</section>

</ui:UiBinder>