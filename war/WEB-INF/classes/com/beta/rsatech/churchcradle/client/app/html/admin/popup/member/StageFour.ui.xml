<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.beta.rsatech.churchcradle.client.widgets">
	<ui:style>
	.scroll-style {
		overflow-y: auto;
		min-height: 265px !important;
	}
	</ui:style>
	<g:HTMLPanel styleName="panel-body">
		<div role="form">

			<div class="form-group">
				<c:CustomCheckBox ui:field="smsBox"></c:CustomCheckBox>
			</div>

			<div class="form-group">
				<c:CustomCheckBox ui:field="payments"></c:CustomCheckBox>
			</div>

			<div class="form-group">
				<small>Approve Modules</small>
				<g:FlowPanel styleName="form-control textarea-style {style.scroll-style}"
					ui:field="approveModulesContainer"></g:FlowPanel>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 