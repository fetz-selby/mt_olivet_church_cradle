<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.beta.rsatech.churchcradle.client.widgets">
	<ui:style>
			.main{width: 280px; top: 64px;}
	</ui:style>
	<g:HTMLPanel styleName="col-sm-6 {style.main}">
		<section class="panel panel-default">
			<header class="panel-heading font-bold">Funeral Approval<a href="javascript:void(0)" class="pull-right" ui:field="closeAnchor">x</a></header>
			
			<div class="alert alert-danger hide" ui:field="errorDiv">
				<button type="button" class="close" data-dismiss="alert">×</button>
				<i class="fa fa-ban-circle"></i>
				<strong ui:field="titleErrorMessage"></strong>
			</div>
			
			<div class="alert alert-primary hide" ui:field="loadingDiv">
				<button type="button" class="close" data-dismiss="alert">×</button>
				<i class="fa fa-ban-circle"></i>
				<strong>Loading ...</strong>
			</div>
			
			<div class="panel-body">
				<div role="form">
					<div class="form-group">
						<label>Decease</label>
						<g:TextBox styleName="form-control" ui:field="deceaseField"></g:TextBox>
					</div>
					<div class="form-group">
						<label>Age</label>
						<g:TextBox styleName="form-control" ui:field="ageField"></g:TextBox>
					</div>
					<div class="form-group">
						<label>Venue</label>
						<c:ReviewPopupTextArea ui:field="venueField"></c:ReviewPopupTextArea>
					</div>
					<div class="form-group">
						<label>Date</label>
						<g:TextBox styleName="form-control" ui:field="dateField"></g:TextBox>
					</div>
					
					<div class="checkbox i-checks">
						<label>
							<input type="checkbox" ui:field="checkbox" />
							<i ui:field="iCheck"></i>
							Approve Funeral
						</label>
					</div>
					<g:Button styleName="btn btn-sm btn-default pull-right" ui:field="submitBtn">Submit</g:Button>
					<g:Button styleName="btn btn-sm btn-default pull-left" ui:field="rejectBtn">Reject</g:Button>	
				</div>
			</div>
		</section>
	</g:HTMLPanel>
</ui:UiBinder>