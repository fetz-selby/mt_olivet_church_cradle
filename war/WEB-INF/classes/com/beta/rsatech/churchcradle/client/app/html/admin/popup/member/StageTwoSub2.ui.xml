<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.beta.rsatech.churchcradle.client.widgets">
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel>
		<div class="panel-body">
			<div role="form">
			    <div class="form-group">
			        <label>Have you been baptised?</label>
			    </div>
				<div class="form-group">
					<div class="radio">
						<label>
							<input type="radio" name="mstatus" ui:field="baptiseYesChk" />
							Yes
						</label>
					</div>
					<div class="radio">
						<label>
							<input type="radio" name="mstatus" ui:field="baptiseNoChk" />
							No
						</label>
					</div>
				</div>
				
				<div class="form-group">
					<g:TextBox styleName="form-control hide" ui:field="ministerBox"></g:TextBox>
				</div>

				<div class="form-group">
					<g:TextBox styleName="form-control hide" ui:field="dateOfBaptiseBox"></g:TextBox>
				</div>
				
				<div class="form-group">
					<g:TextBox styleName="form-control hide" ui:field="placeOfBaptiseBox"></g:TextBox>
				</div>
				
				<div class="form-group">
					<g:TextBox styleName="form-control" ui:field="previousChurch"></g:TextBox>
				</div>

			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 