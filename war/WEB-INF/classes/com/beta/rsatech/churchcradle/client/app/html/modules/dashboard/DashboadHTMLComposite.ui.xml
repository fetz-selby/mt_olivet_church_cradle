<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
	<ui:style>
		.dash-style{height:148px !important; padding: 15px
		!important;}
	</ui:style>
	<section class="hbox stretch">
		<section>
			<section class="vbox">
				<section class="scrollable padder">
					<section class="row m-b-md">
						<div class="col-sm-6">
							<h3 class="m-b-xs text-black">Dashboard</h3>
						</div>
					</section>
					<div class="row">
						<div class="col-sm-12">
							<div class="panel b-a">
								<div class="row m-n">
									<div class="col-md-6 b-b b-r {style.dash-style}">
										<a href="javascript:void(0)" class="block padder-v hover">
											<span class="i-s i-s-3x pull-left m-r-sm">
												<i class="i i-hexagon2 i-s-base text-danger hover-rotate"></i>
												<i class="fa fa-gift fa-1x text-white"></i>
											</span>
											<span class="clear">
												<span class="h3 block m-t-xs text-danger" ui:field="birthdaySpan">0</span>
												<small class="h5 text-muted text-u-c">Birthdays</small>
											</span>
										</a>
									</div>
									<div class="col-md-6 b-b {style.dash-style}">
										<a href="javascript:void(0)" class="block padder-v hover">
											<span class="i-s i-s-3x pull-left m-r-sm">
												<i class="i i-hexagon2 i-s-base text-success-lt hover-rotate"></i>
												<i class="i i-users2 i-sm text-white"></i>
											</span>
											<span class="clear">
												<span class="h3 block m-t-xs text-success" ui:field="membersSpan">0</span>
												<small class="h5 text-muted text-u-c">Members</small>
											</span>
										</a>
									</div>
									<div class="col-md-6 b-b b-r {style.dash-style} hide" ui:field="smsDiv">
										<a href="javascript:void(0)" class="block padder-v hover">
											<span class="i-s i-s-3x pull-left m-r-sm">
												<i class="i i-hexagon2 i-s-base text-info hover-rotate"></i>
												<i class="i i-mail i-sm text-white"></i>
											</span>
											<span class="clear">
												<span class="h3 block m-t-xs text-info" ui:field="smsSpan">0</span>
												<span class="h4">SMS &nbsp;</span>

												<small class="h5 text-muted text-u-c">This Month</small>
											</span>
										</a>
									</div>


									<div class="col-md-6 b-b b-r {style.dash-style} hide" ui:field="groupDiv">
										<a href="javascript:void(0)" class="block padder-v hover">
											<span class="i-s i-s-3x pull-left m-r-sm">
												<i class="i i-hexagon2 i-s-base text-warning hover-rotate"></i>
												<i class="fa fa-group i-sm text-white"></i>
											</span>
											<span class="clear">
												<span class="h3 block m-t-xs text-warning" ui:field="groupSpan">0</span>
												<small class="h5 text-muted text-u-c">Groups</small>
											</span>
										</a>
									</div>


									<div class="col-md-6 b-b {style.dash-style}">
										<a href="javascript:void(0)" class="block padder-v hover">
											<span class="i-s i-s-3x pull-left m-r-sm">
												<i class="i i-hexagon2 i-s-base text-primary hover-rotate"></i>
												<i class="fa fa-thumbs-up i-sm text-white"></i>
											</span>
											<span class="clear">
												<span class="h3 block m-t-xs text-primary" ui:field="requestSpan">0</span>
												<small class="h5 text-muted text-u-c">Pending Approval(s)</small>
											</span>
										</a>
									</div>
								</div>
							</div>
						</div>


					</div>


				</section>
			</section>
		</section>
	</section>
</ui:UiBinder>