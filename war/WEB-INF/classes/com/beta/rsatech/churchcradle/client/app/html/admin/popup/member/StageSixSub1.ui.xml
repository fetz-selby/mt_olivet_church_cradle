<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.beta.rsatech.churchcradle.client.widgets">
	<ui:style>
	.scroll-style {
		overflow-y: auto;
		max-height: 265px !important;
	}
	
	</ui:style>
	<g:HTMLPanel styleName="panel-body">
	    <div class="form-group">
	            <button class="pull-right btn btn-primary" ui:field="addButton">Add</button>
	           	<button class="pull-left btn btn-primary" ui:field="clearButton">Clear</button>
	    </div>
	    
		<div class="form-group">
			<g:FlowPanel ui:field="widgetContainer" styleName="{style.scroll-style}"></g:FlowPanel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 