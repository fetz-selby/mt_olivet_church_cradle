<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.img-style{width: 130px !important; height: 130px !important;}
	</ui:style>
	<g:HTMLPanel>
		<div class="row">
			<div class="text-center m-t">
				<div class="avatar b-3x">
					<g:Image styleName="{style.img-style}" ui:field="img" ></g:Image>
				</div>
			</div>
			
		</div>

		<div class="panel-body">
			<div role="form">
				<div class="form-group">
				    <small class="text-muted m-r-md col-sm-4">Name</small>
					<strong class="h5" ui:field="nameField">John Smith</strong>
				</div>
				<div class="form-group">
				    <small class="text-muted m-r-md col-sm-4">Mobile</small>
					<strong class="h5" ui:field="msisdnField">+1 900 000 0000</strong>
				</div>
				<div class="form-group">
				    <small class="text-muted m-r-md col-sm-4">Password</small>
					<strong class="h5" ui:field="passwordField">*****</strong>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>