<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

	</ui:style>
	<g:HTMLPanel>
		<div class="panel-body">
			<div role="form">
				<div class="form-group">
					<div class="radio">
						<label>
							<input type="radio" name="mstatus" ui:field="sInput" />
							Single
						</label>
					</div>
					<div class="radio">
						<label>
							<input type="radio" name="mstatus" ui:field="mInput" />
							Married
						</label>
					</div>
					<div class="radio">
						<label>
							<input type="radio" name="mstatus" ui:field="dInput" />
							Divorced
						</label>
					</div>
					<div class="radio">
						<label>
							<input type="radio" name="mstatus" ui:field="wInput" />
							Widowed
						</label>
					</div>
				</div>
				
				<div class="form-group">
					<g:TextBox styleName="form-control hide" ui:field="spouseField"></g:TextBox>
				</div>

				<div class="form-group">
					<g:TextBox styleName="form-control" ui:field="kinField"></g:TextBox>
				</div>
				
				<div class="form-group">
					<g:TextBox styleName="form-control" ui:field="kinMsisdnField"></g:TextBox>
				</div>

			</div>
		</div>
	</g:HTMLPanel>
