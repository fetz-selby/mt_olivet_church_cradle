<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.beta.rsatech.churchcradle.client.widgets">
	<ui:style>
		.upload-hide {cursor: pointer;opacity: 0;position: absolute;z-index: 2;}
		.img-style{width: 260px; height: 160px;}
		.listbox-style{height: 40px;}
	</ui:style>
	<g:HTMLPanel>
		<div class="row">
			<div class="text-center m-t">
				<div class="thumb-lg b-3x">
					<img src="images/offering.jpg" class="{style.img-style}"></img>
				</div>
			</div>
		</div>

		<div class="panel-body">
			<div role="form">
				<div class="form-group">
					<g:TextBox styleName="form-control" ui:field="fullNameField"></g:TextBox>
				</div>
				<div class="form-group">
					<g:TextBox styleName="form-control" ui:field="monthField"></g:TextBox>
				</div>
				
				<div class="form-group">
					<g:ListBox styleName="form-control {style.listbox-style}" ui:field="churchField"></g:ListBox>
				</div>
				
				<div class="form-group">
					<g:TextBox styleName="form-control" ui:field="amountField"></g:TextBox>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 