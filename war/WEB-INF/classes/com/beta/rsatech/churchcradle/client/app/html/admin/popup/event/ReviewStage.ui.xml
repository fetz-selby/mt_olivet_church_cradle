<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.header-style{height: 95px; padding: 7px;}
		.couple-style{padding: 7px 7px;}
		.i-style{padding-right: 5px;}
	</ui:style>
	<g:HTMLPanel>
		<header class="bg-danger no-border {style.header-style}">
			<div class="clearfix">
				
				<div class="text-center">
					<small class="h4 text-muted" ui:field="descriptionField">Art director</small>
				</div>
			</div>
			
		</header>

		<div class="panel-body">
			<div role="form">
				<div class="form-group">
					<small class="text-muted m-r-md col-sm-4">Venue</small>
					<strong class="h5" ui:field="venueField">National Theater</strong>
				</div>
				<div class="form-group">
					<small class="text-muted m-r-md col-sm-4">Date</small>
					<strong class="h5" ui:field="dateField">2015-06-12</strong>
				</div>
				<div class="form-group">
					<small class="text-muted m-r-md col-sm-4">Time</small>
					<strong class="h5" ui:field="timeField">You're all condialy invited</strong>
				</div>
				
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>