<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main-style{height: 114px; border:1px solid #FFFFFF; cursor: pointer;}
		.span-style{margin-top: 10px;}
        .i-style{padding-top: 10px;}
	</ui:style>
	<g:HTMLPanel styleName="col-xs-4 bg-info {style.main-style}" ui:field="mainPanel">
		<i class="pull-right fa fa-check {style.i-style} hide" ui:field="checker"></i>
		<div class="padder-v">
			<span class="m-b-xs h3 block text-white {style.span-style}" ui:field="memberCountSpan">245</span>
			<small class="text-muted" ui:field="organisationNameSmall">Followers</small>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 