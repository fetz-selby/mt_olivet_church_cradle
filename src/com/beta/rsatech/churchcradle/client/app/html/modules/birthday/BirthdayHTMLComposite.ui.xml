<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
	<ui:style>
	.main-style{padding: 0;}
	.header-style{height: 144px; padding: 7px;}
	.i-style{padding-right: 5px;}
	.img-style{width: 130px !important; height: 130px !important;}

	</ui:style>
	<section class="col-xs-12 col-sm-12 col-lg-3 col-md-3 panel panel-default {style.main-style}">
		<header class="bg-success no-border {style.header-style}">
			<div class="clearfix">
				<a href="#" class="pull-left avatar b-3x m-r">
					<img src="images/no-image.jpg" class="{style.img-style}" ui:field="avatar"/>
				</a>
				<div class="pull-left">
					<div class="h4 m-t-xs m-b-xs" ui:field="celebrantNameDiv">
						John.Smith
					</div>
					<small class="text-muted h5" ui:field="age">79</small>
				</div>
			</div>
		</header>
		<div class="list-group no-radius alt">
			<a class="list-group-item" href="javascript:void(0)">
				<i class="fa fa-calendar icon-muted text-success {style.i-style}"></i>
				<small ui:field="smallDate" class="text-success">Sat, 22nd December, 2015</small>
			</a>
		</div>
	</section>

</ui:UiBinder>