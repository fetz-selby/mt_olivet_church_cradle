<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
	<ui:style>
		.header-style{padding: 0;}
		.couple-style{padding: 7px 7px;}
		.i-style{padding-right: 5px;}
		.img-style{width: 130px !important; height: 130px !important;}
	</ui:style>
	<section class="col-xs-12 col-sm-12 col-lg-3 col-md-3 panel panel-default {style.header-style}">
		<header class="bg-primary no-border">
			<div class="clearfix {style.couple-style}">
				<a href="javascript:void(0)" class="pull-left avatar b-3x m-r">
					<img src="images/no-image.jpg" class="{style.img-style}" ui:field="mAvatar"/>
				</a>
				<div class="pull-left">
					<div class="h4 m-t-xs m-b-xs" ui:field="maleNameDiv">
						John.Smith
					</div>
					<small class="text-muted" ui:field="maleOccupation">Art director</small>
				</div>
			</div>
			<div class="row"></div>
			<div class="clearfix {style.couple-style}">
			    <a href="javascript:void(0)" class="pull-left avatar b-3x m-r">
					<img src="images/no-image.jpg" class="{style.img-style}" ui:field="fAvatar"/>
				</a>
				<div class="pull-left">
					<div class="h4 m-t-xs m-b-xs" ui:field="femaleNameDiv">
						Jane.Doe
					</div>
					<small class="text-muted" ui:field="femaleOccupation">Singer</small>
				</div>
			</div>
		</header>
		<div class="list-group no-radius alt">
			<a class="list-group-item" href="javascript:void(0)">
				<i class="fa fa-map-marker icon-muted text-primary {style.i-style}"></i>
				<small ui:field="smallVenue" class="text-primary">Olivet Chapel</small>
			</a>
			<a class="list-group-item" href="javascript:void(0)">
				<i class="fa fa-calendar icon-muted text-primary {style.i-style}"></i>
				<small ui:field="smallDate" class="text-primary">Sat, 22nd December, 2015</small>
			</a>
			<a class="list-group-item" href="javascript:void(0)">
				<i class="fa fa-clock-o icon-muted text-primary {style.i-style}"></i>
				<small ui:field="smallTime" class="text-primary">12.00pm</small>
			</a>
		</div>
	</section>

</ui:UiBinder>